@model IEnumerable<Perpustakaan.Models.Pinjaman>

@{
    ViewData["Title"] = "Index";
}

<h1>Detail Pinjaman</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Jumlah")
            </th>
            <th>
                @Html.DisplayName("Buku")
            </th>
            <th>
                @Html.DisplayName("Nota")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Jumlah)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBukuNavigation.JudulBuku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNotaNavigation.IdNota)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPinjaman"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPinjaman"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPinjaman"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
