@model Perpustakaan.Models.Pinjaman

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Detail Pinjaman</h1>

<h4>Pinjaman</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPinjaman" />
            <div class="form-group">
                <label  class="control-label">ID Nota</label>
                <select asp-for="IdNota" class="form-control" asp-items="ViewBag.IdNota"></select>
                <span asp-validation-for="IdNota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Buku</label>
                <select asp-for="IdBuku" class="form-control" asp-items="ViewBag.IdBuku"></select>
                <span asp-validation-for="IdBuku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Jumlah</label>
                <input asp-for="Jumlah" class="form-control" />
                <span asp-validation-for="Jumlah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
